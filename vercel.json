{
  "version": 2,
  "buildCommand": "vite build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "framework": "vite",
  "functions": {
    "api/*.ts": {
      "runtime": "@vercel/node"
    }
  },
  "rewrites": [
    { "source": "/api/cities", "destination": "/api/cities" },
    { "source": "/api/tours", "destination": "/api/tours" },
    { "source": "/api/tour-details", "destination": "/api/tour-details" },
    { "source": "/api/tour-options", "destination": "/api/tour-options" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
